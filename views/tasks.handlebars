    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
        <div class="container">
            <div id="project-id" data-id="{{info.id}}"></div>
            <h1 id="project-name">{{info.projectName}}</h1>
            <p id="project-description">{{info.projectDesc}}</p>
        </div>
    </div>
<div class="container">
    <!-- row of columns -->
    <div class="row">
        <div class="col-md-4">
            <h2>TO DO</h2>  
            <div id="tasks-todo">
                {{#each todos}}                
                <div class="card">
                    <div class="card-header">
                        {{this.taskName}}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.taskPriority}}</h5>
                        <p class="card-text">{{this.taskDesc}}</p>
                        <div class="float-btn-right">
                            <button class="btn btn-primary task-edit" data-id="{{this.id}}" data-toggle="modal" data-target="#updateTask"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-primary task-delete" data-id="{{this.id}}"><i class="fa fa-trash"></i></button>
                        </div>
                    </div>
                </div>
                {{/each}}            
            </div>

            <button class="btn btn-secondary task-add" data-toggle="modal" data-target="#addTask">Add New Task</button>

        </div> 

        <div class="col-md-4">
            <h2>IN PROGRESS</h2>
            <div id="tasks-in-progress">
                {{#each inProgress}}
                <div class="card">
                    <div class="card-header">
                        {{this.taskName}}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.taskPriority}}</h5>
                        <p class="card-text">{{this.taskDesc}}</p>
                        <div class="float-btn-right">
                            <button class="btn btn-primary task-edit" data-id="{{this.id}}" data-toggle="modal" data-target="#updateTask"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-primary task-delete" data-id="{{this.id}}"><i class="fa fa-trash"></i></button>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <div class="col-md-4">
                <h2>DONE</h2>
                <div id="tasks-completed">
                {{#each done}}
                <div class="card">
                    <div class="card-header">
                        {{this.taskName}}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{this.taskPriority}}</h5>
                        <p class="card-text">{{this.taskDesc}}</p>
                        <div class="float-btn-right">
                            <button class="btn btn-primary task-edit" data-id="{{this.id}}" data-toggle="modal" data-target="#updateTask"><i class="fas fa-edit"></i></button>
                            <button class="btn btn-primary task-delete" data-id="{{this.id}}"><i class="fa fa-trash"></i></button>
                        </div>
                    </div>
                </div>
                {{/each}}
                <!-- COMPLETED TASKS HERE -->                
                </div>
        </div>
    </div>

    <hr>

    <footer>
        <p class="footer">&copy; 2020 Hot-Kanbuns, Inc.</p>
    </footer>
        
    <!-- Update Task Modal -->
    <div class="modal fade" id="updateTask" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <!-- Modal Content -->
            <div class="modal-content">
                <div class="modal-body">
                    <form id="taskUpdate">
                        <div class="form-group">
                          <label for="updatedtaskname">Task Name</label>
                          <input type="text" class="form-control" id="updatedtaskname" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="updatedtaskdesc">Task Description</label>
                            <textarea class="form-control" id="updatedtaskdesc" rows="4"></textarea>
                          </div>
                        <div class="form-group">
                          <label for="updatedtaskpriority">Task Priority</label>
                          <select class="form-control" id="updatedtaskpriority">
                            <option value="high">High</option>
                            <option value="medium">Medium</option>
                            <option value="low">Low</option>
                          </select>
                        </div>
                        <div class="form-group">
                            <label for="updatedtaskstatus">Task Status</label>
                            <select class="form-control" id="updatedtaskstatus">
                              <option value="todo">TO DO</option>
                              <option value="inProgress">IN PROGRESS</option>
                              <option value="completed">DONE</option>
                            </select>
                          </div>                       
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="update-task-btn">Update Task</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ADD TASK MODAL -->
    <div class="modal fade" id="addTask" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <!-- Modal Content -->
            <div class="modal-content">
                <div class="modal-body">
                    <form id="taskUpdate">
                        <div class="form-group">
                          <label for="addtaskname">Task Name</label>
                          <input type="text" class="form-control" id="addtaskname" placeholder="Enter task name" required>
                        </div>
                        <div class="form-group">
                            <label for="addtaskdesc">Task Description</label>
                            <textarea class="form-control" id="addtaskdesc" rows="4" required></textarea>
                          </div>
                        <div class="form-group">
                          <label for="addtaskpriority">Task Priority</label>
                          <select class="form-control" id="addtaskpriority">
                            <option value="high">High</option>
                            <option value="medium">Medium</option>
                            <option value="low">Low</option>
                          </select>
                        </div>                                               
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="add-task-btn">Add Task</button>
                </div>
            </div>
        </div>
    </div>

</div> 
